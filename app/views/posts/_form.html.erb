<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h2><%= pluralize(@post.erros.count, "error") %> prevented this post from saving: </h2>
		<% @post.erros.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	<% end %>

	<%= f.label :title %> <br>
	<%= f.text_field :title %>

	<br>
	<br>
	<%= f.label :content, "Article here" %> <br>
	<%= f.text_area :content %>

	<br>
	<br>

	<%= f.submit %>
<% end %>